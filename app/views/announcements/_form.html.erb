<% if @announcement.errors.any? %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>There were errors saving this announcement:</strong>
      <% @announcement.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @announcement, :html => {:class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <label for="announcement_title" class="col-sm-1 control-label">Title</label>
        <div class="col-sm-10">
          <%= f.text_field :title, :class => "form-control" %>
        </div>
      </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="announcement_body" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-8">
          <%= f.text_area :body, :rows => 6, :class => "form-control" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <label for="announcement_link_text" class="col-sm-2 control-label">Link Text</label>
        <div class="col-sm-8">
          <%= f.text_field :link_text, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label for="announcement_link_url" class="col-sm-2 control-label">Link URL</label>
        <div class="col-sm-8">
          <%= f.text_field :link_url, :class => "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-offset-1 col-sm-9">
    <button type="submit" class="btn btn-default">
      <%= f.object.new_record? ? 'Create' : 'Update' %>
    </button>
  </div>
<% end %>
