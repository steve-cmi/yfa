<h1>Calendar</h1>

<div class="row controls">
  <form class="form-inline" role="form">
    <div class="col-md-3">
      <% @scopes.each do |scope| -%>
        <button type="submit" name="scope" value="<%= scope %>"
            class="btn btn-<%= @scope == scope ? :primary : :link %>">
          <%= scope.to_s.titlecase %>
        </button>
      <% end -%>
    </div>

    <div class="col=md-9">
      <%= select_tag "filter", options_from_collection_for_select(@filters, "slug", "name", params[:filter]), prompt: 'Event type', class: 'form-control' %>
      <button type="submit" class="btn btn-default" name="scope" value="<%= @scope %>">Filter</button>
    </div>
  </form>
</div>

<% if @dates.empty? -%>
<div class="row">
  <h4>
    There are no
    <%= @filter ? @filter.name : 'events of any type' %> listed
    <%= @scope == :day ? 'for today' : "this #{@scope}" %>
  </h4>
</div>

<% else -%>
  <% @dates.group_by(&:date).each do |date, dates| -%>
  <h3><%= long_date date %></h3>
  <div class="grid row">
    <% dates.each do |date| -%>
      <div class="col-md-4">
        <div class="row">

          <div class="col-md-5 image text-center">
            <%= image_tag date.event.image.url(:grid) -%>
          </div>

          <div class="col-md-7 info">
            <p>
              <%= render "dialog", date: date %><br />
              <%= time date.starts_at %> -
              <%= time date.ends_at %>
            </p>
            <p>
              <%= date.event_location %><br />
              <%= link_to_building date.event_building %>
            </p>
            <p>
              <% date.event.filters.each do |filter| -%>
              <a href="#" class="btn btn-default btn-xs"><%= filter.name %> </a>
              <% end -%>
            </p>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <hr />
  <% end -%>

<% end -%>
