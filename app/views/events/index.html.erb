<h1>Calendar</h1>

<div class="row controls">
  <form class="form-inline" role="form">
    <input type="hidden" name="date" value="<%= @date %>" />
    <div class="col-md-4">
      <% @scopes.each do |scope| -%>
        <button type="submit" name="scope" value="<%= scope %>"
            class="btn btn-<%= @scope == scope ? :primary : :link %>">
          <%= scope.to_s.titlecase %>
        </button>
      <% end -%>
    </div>

    <div class="col-md-6">
      <%= select_tag "filter", options_for_select(@filters, params[:filter]), prompt: 'Event type', class: 'form-control' %>
      <button type="submit" class="btn btn-default" name="scope" value="<%= @scope %>">Filter</button>
    </div>

    <div class="col-md-2">
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= link_to "&laquo; Back".html_safe, {:scope => @scope, :filter => params[:filter], :date => @prev_date}, :class => "btn btn-default" %>
          <%= link_to "Next &raquo;".html_safe, {:scope => @scope, :filter => params[:filter], :date => @next_date}, :class => "btn btn-default" %>
        </div>
      </div>
    </div>
  </form>
</div>

<% if @dates.empty? -%>
<div class="row">
  <h4>
    There are no
    <%= @filter.blank? ? 'events of any type' : @filters.rassoc(@filter).first %> listed
    for this time period
  </h4>
</div>

<% else -%>
  <% @dates.group_by(&:date).each do |date, dates| -%>
  <h3><%= long_date date %></h3>
  <div class="grid row">
    <% dates.each do |date| -%>
      <div class="col-md-4">
        <div class="row">

          <div class="col-md-5 image text-center">
            <%= image_tag date.event_image.url(:grid) -%>
          </div>

          <div class="col-md-7 info">
            <p>
              <% if date.respond_to?(:film) -%>
              <%= link_to date.film.title, date.film %>
              <% else -%>
              <%= render "dialog", date: date %>
              <% end -%>
              <br />

              <%= time date.starts_at %> -
              <%= time date.ends_at %>
            </p>
            <p>
              <%= date.event_location %><br />
              <%= link_to_building date.event_building %>
            </p>
            <p>
              <% if date.respond_to?(:film) -%>
                <span class="label label-default">Screening</span>
              <% else -%>
                <% date.event.filters.each do |filter| -%>
                <span class="label label-default"><%= filter.name %></span>
                <% end -%>
              <% end -%>
            </p>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <hr />
  <% end -%>

<% end -%>
