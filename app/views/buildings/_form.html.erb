<% if @building.errors.any? %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>There were errors saving this building:</strong>
      <% @building.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @building, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <label for="building_code" class="col-sm-2 control-label">Code</label>
    <div class="col-sm-9">
      <%= f.text_field :code, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="building_name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-9">
      <%= f.text_field :name, :rows => 2, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="building_address" class="col-sm-2 control-label">Address</label>
    <div class="col-sm-9">
      <%= f.text_field :address, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="building_city_state" class="col-sm-2 control-label">City, State</label>
    <div class="col-sm-9">
      <%= f.text_field :city_state, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="building_zip" class="col-sm-2 control-label">Zip</label>
    <div class="col-sm-9">
      <%= f.text_field :zip, :class => "form-control" %>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-9">
    <button type="submit" class="btn btn-default">
      <%= f.object.new_record? ? 'Create' : 'Update' %>
    </button>
  </div>
<% end %>
