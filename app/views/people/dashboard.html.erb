<%= link_to "Site Admin Dashboard<br/><br />".html_safe, admin_dashboard_path if @current_user.site_admin? %>
<h3>Welcome <%= @current_user.fname %>!</h3> 
<p>This dashboard is your hub for everything on the site. Here you can manage all your activity in the film community at Yale!<br />
<%= link_to "(Logout)", logout_path %></p>


<div class="row">
	<div class="span6">
		<h5>My Profile  &nbsp; <%= link_to "(Edit)", @current_user %></h5> 
		<b><%= @current_user.display_name %></b><br />
	    <%= @current_user.college %> <%= @current_user.year %><br />
	    <%= sanitize(@current_user.bio, :tags => %w(b i em strong a br)).gsub(/\n/, '<br/>').html_safe %>
		<br /><br />
		<b>Names Similar to Yours</b> &nbsp;
		<a href="#" rel="tooltip" title="People might sometimes list you under nicknames or aliases. By requesting to merge these names, all your film credits will be unified under the same profile, this one!">What's this?</a>
		<br />
		<% if @similar_people.empty? %>
			No people found right now
		<% else %>
			<%= form_tag takeover_request_path(@current_user) do %>
				<% @similar_people.each do |p| %>
					<label><%= check_box_tag 'person_ids[]', p.id %> <%= p.display_name %> <%= "(#{p.college} #{p.year})" if p.college || p.year %></label><br />
				<% end %>
				<%= submit_tag "Request Names" %>
			<% end %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="span6">
		<h5>My Auditions</h5>
		<% if @auditions.empty? %>
			You don't have any upcoming auditions!
		<% else %>
			<table>
				<tr><th>Film</th><th>Audition Time</th><th>Location</th><th></th></tr>
				<% @auditions.each do |a| %>
					<tr>
						<td><%= link_to a.film.title, a.film %></td>
						<td><%= small_timestamp a.timestamp %></td>
						<td><%= a.location %></td>
						<td><%= link_to "View/Edit", film_auditions_path(a.film) %></td>
				<% end %>
			</table>
		<% end %> 
	</div>
	<div class="span6">
		<h5>My Films  &nbsp; <%= link_to "(New)", new_film_path %></h5>
		Note that ticketing and audition links won't be available until films are approved.<br /><br />
		<% if @films.empty? %>
			You don't currently have access to any films!
		<% else %>
			<table>
				<tr><th>Film</th><th>Open Date</th><th>Permissions</th><th></th></tr>
				<% @films.each do |s| %>
				<tr>
					<td><%= link_to s.title, s %><%= " (Pending)" unless s.approved %></td>
					<td><%= s.showtimes.first.timestamp.strftime("%b %d %Y") %></td>
					<td><%= @permission_map[s.id].map{|p| p.level.to_s.capitalize}.join(",") %></td>
					<td>
						<%= link_to "Film Dashboard", film_dashboard_path(s) %>
					</td>
				</tr>
				<% end %>
			</table>
		<% end %>
	</div>
</div>




