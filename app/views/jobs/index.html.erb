<h1>Jobs &amp; Internships</h1>

<form class="form-inline" role="form">
  <div class="row controls">

    <div class="col-lg-5 col-md-12">
      <strong class="form-control-static">Sort by:</strong> &nbsp;&nbsp;&nbsp;
      <% @scopes.each do |scope| -%>
        <button type="submit" name="scope" value="<%= scope %>"
            class="btn btn-sm btn-<%= @scope == scope ? :primary : :link %>">
          <%= scope.to_s.titlecase %>
        </button>
      <% end -%>
    </div>

    <div class="col-md-12 hidden-lg">
      <br />
    </div>

    <div class="col-lg-7 col-md-12">
      <%= select_tag :state, grouped_options_for_select(@state_options, params[:state]), :prompt => 'Any Country and State', :class => 'btn-xs form-control' %>
      <%= select_tag :paid, options_for_select([['Paid', true], ['Unpaid', false]], params[:paid]), :prompt => 'Any Compensation', :class => 'btn-xs form-control' %>
      <%= select_tag :alum, options_for_select([['Affiliated', true], ['Unaffiliated', false]], params[:alum]), :prompt => 'Any Alumni affiliation', :class => 'btn-xs form-control' %>
      <span class="hidden-xs">&nbsp;&nbsp;</span>
      <button type="submit" name="scope" value="<%= @scope %>" class="btn btn-default">Filter</button>
    </div>

  </div>

</form>

<div class="grid row row-clearfix">

  <% if @jobs.empty? -%>
    <div class="col-md-12">
      <h4>No matching jobs were found.</h4>
    </div>

  <% else -%>
    <% @jobs.each do |job| -%>
      <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
        <h4><%= job.company %></h4>

        <p>

          <strong>Position:</strong>
          <%= job.position %>
          <br />

          <strong>Timeframe:</strong>
          <%= short_date job.start_date %> -
          <%= short_date job.end_date %>
          <br />

          <strong>Compensation:</strong>
          <%= job.compensation || 'Unpaid' %>
          <br />

          <strong>Posted:</strong>
          <%= short_date job.created_at %>
          <br />

          <address>
            <%= job.full_address.join('<br />').html_safe %>
          </address>

          <%= render "dialog", job: job %><br />

        </p>

      </div>
    <% end -%>

</div>

<% end -%>
