<% javascript 'admin.js' %>
<h3>Admin Dashboard</h3>

<style>
label {display:inline;}
input[type=radio] {margin:0px;margin-left:5px;vertical-align:center;}
input#subject {margin:2px;width:517px;}
textarea#message {padding:0px;margin:0px;height:100px;width:600px;font-size:12px;}
div#email_content {margin:10px 0px;}
</style>
<h4>Email all</h4>
<%= form_tag(:action => :email_all) do %>
	<strong>Films</strong>:
	<%= radio_button_tag :films, :upcoming %>
	<%= label_tag :films_upcoming, "Upcoming" %>
	<%= radio_button_tag :films, :semester %>
	<%= label_tag :films_semester, "This semester" %>
	<%= radio_button_tag :films, :year %>
	<%= label_tag :films_year, "This year" %>
	<br />
	<strong>Positions</strong>:
	<%= radio_button_tag :positions, :producers %>
	<%= label_tag :positions_producers, "Producers" %>
	<%= radio_button_tag :positions, :contacts %>
	<%= label_tag :positions_contacts, "Producers, directors and stage managers" %>
	<br />
	<div id="email_content">
		<strong>Subject</strong>:
		<%= text_field_tag :subject %><br />
		<%= text_area_tag :message %><br />
	</div>
	<%= submit_tag "Send" %>
<% end %>

<h4>Pending Film Queue</h4>
<% if @pending_films.blank? %>
	No requests at this time!
<% else %>
	<table>
		<tr><th>Film</th><th>- - -</th><th>Approve</th><th>- - -</th><th>Approve, but don't archive</th><th>- - -</th><th>Delete</th></tr>
		<% @pending_films.each do |s| %>
			<tr><td><%= link_to s.title, edit_film_path(s) %></td>
				<td> </td>
				<td><%= link_to "Approve", approve_film_path(s.id) + "?archive=1" %></td>
				<td> </td>
				<td><%= link_to "Approve (no archive)", approve_film_path(s.id) %></td>
				<td> </td>
				<td><%= form_for(:film, :url => film_path(s.id), :html => {:method => :delete}) do  %>
			  <%= submit_tag "Delete", :confirm => "Are you sure you want to delete the selected film?" %>
			<% end %></td>
			</tr>
		<% end %>
	</table>
<% end %>
<br /><br />

<h4>Pending Name Request Queue</h4>
<% if @pending_takeovers.blank? %>
	No requests at this time!
<% else %>
	<table>
		<tr><th>User Name</th><th>Requested Name</th><th>Approve</th><th>Remove</th></tr>
	<% @pending_takeovers.each do |req| %>
		<tr><td><%= link_to req.person.display_name, req.person %></td><td><%= link_to req.requested_person.display_name, req.requested_person %></td><td><%= link_to "Approve", approve_takeover_path(req) %></td><td><%= link_to "Delete", reject_takeover_path(req) %></td></tr>
	<% end %>
	</table>
<% end %>


<br /><br />
<b>Select a film to edit:</b>
<form method="get" action="/films/id/dashboard">
  <%= select_tag :film_edit_id, options_from_collection_for_select(@films, :id, :title) %>
  <%= submit_tag "Edit"%>
</form>

<br />
<b>Delete a film:</b>
<%= form_for(:film, :url => film_path("id"), :html => {:method => :delete}) do  %>
  <%= select_tag :film_delete_id, options_from_collection_for_select(@films, :id, :title) %>
  <%= submit_tag "Delete", :confirm => "Are you sure you want to delete the selected film?" %>
<% end %>

<br /><br />
<b>Edit News:</b>
<form method="get" action="/news/id/edit">
  <%= select_tag :news_edit_id, options_from_collection_for_select(@news, :id, :title) %>
  <%= submit_tag "Edit" %>
</form>
<br /><br />

<b>Delete News:</b>
<%= form_for(:news, :url => news_path("id"), :html => {:method => :delete}) do  %>
  <%= select_tag :news_delete_id, options_from_collection_for_select(@news, :id, :title) %>
  <%= submit_tag "Delete", :confirm => "Are you sure you want to delete the selected article?" %>
<% end %>

<br /><br />

<b>New News:</b>
<div class="news">
	<%= form_for News.new do |f| %>
		Title: <%= f.text_field :title %><br />
		Posted by: <%= f.text_field :poster %><br />
		<%= f.text_area :text %>
		<br /><br />
		<%= f.submit "Create" %>
	<% end %>
</div>