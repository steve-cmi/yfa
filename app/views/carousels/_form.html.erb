<% if @carousel.errors.any? %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>There were errors saving this carousel:</strong>
      <% @carousel.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @carousel, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <label for="carousel_title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-9">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="carousel_body" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-9">
      <%= f.text_area :body, :rows => 2, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="carousel_link" class="col-sm-2 control-label">Link</label>
    <div class="col-sm-9">
      <%= f.text_field :link, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="carousel_image" class="col-sm-2 control-label">Image</label>
    <div class="col-sm-9">
      <%= image_field f, :image, :homepage %>
    </div>
  </div>

  <% unless f.object.new_record? -%>
  <div class="form-group">
    <div class="col-sm-9 col-sm-offset-2">
      <div class="checkbox">
        <label for="carousel_active" class="control-label">
          <%= f.check_box :active %> Show on Homepage
        </label>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="col-sm-offset-2 col-sm-9">
    <button type="submit" class="btn btn-default">
      <%= f.object.new_record? ? 'Create' : 'Update' %>
    </button>
  </div>
<% end %>
