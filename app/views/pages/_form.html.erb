<% if @page.errors.any? %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>There were errors saving this page:</strong>
      <% @page.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @page, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.hidden_field :menu %>

  <div class="form-group">
    <label for="page_title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-9">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="page_menu_title" class="col-sm-2 control-label">Menu Title</label>
    <div class="col-sm-9">
      <%= f.text_field :menu_title, :class => "form-control" %>
    </div>
  </div>

  <% if @page.uses_lead? -%>
  <div class="form-group">
    <label for="page_lead" class="col-sm-2 control-label">Lead</label>
    <div class="col-sm-9">
      <%= f.text_field :lead, :class => "form-control" %>
    </div>
  </div>
  <% end -%>

  <div class="form-group">
    <label for="page_content" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-9">
      <%= f.cktext_area :content, :rows => 20, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Image</label>
    <div class="col-sm-10">
      <%= image_field f, :image %>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-9">
    <button type="submit" class="btn btn-default">
      <%= f.object.new_record? ? 'Create' : 'Update' %>
    </button>
  </div>
<% end %>
