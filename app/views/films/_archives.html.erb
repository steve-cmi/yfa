<% 
	# This is bad to put logic in a view...
	film = FIlm.where(:archive => true).film_in_term(term).select(&:has_closed?).sort_by{|film| film.showtimes.first.timestamp}
%>

<% if film.any? %>
  <div class="divider" id="<%= term %>">
  	<h3><%= oci_id_to_text(term) %></h3>
  </div>
  <% film.in_groups_of(3, false) do |items| %>
  	<div class="row">
  		<% items.each do |item| %>
  			<%= render :partial => 'shared/film_with_thumbnail', :locals => { :film => item, :row_count => items.length, :color_palette => item.accent_color ? item.accent_color.to_s : cycle("red", "blue","yellow","black","dark_blue","green", "light_blue"), :lazy => true } %>
  		<% end %>
  	</div>
  <% end %>
<% end %>