<% javascript 'films.js' %>

<% if @film.errors.any? %>
	<ul>
	<% @film.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
	</ul>
<% end %>


<div class="row film-form people">
	<%= form_for @film, :validate => true do |f| %>
	  <div class="span6">
	  	<h5>Production Staff</h5>
	  	<p>Tell the community about who's making your film happen. Leave the name field blank to list the position as a tech opportunity below.</p>
	  	<input type="checkbox" name="order_crew" <%= "checked" if @film.crew.detect{|c| c.listing_order != nil} %>> Use custom ordering below for staff<br />
		  	<ul id="film_positions">
				<%= f.fields_for :film_positions, @film.film_positions.select {|sp| sp.position_id != 17} do |builder| %>
					<%= render 'film_position_fields', :f => builder %>
				<% end %>
				<li><%= link_to_add_fields "Add Crew", f, :film_positions %></li>
			</ul>
	  </div>
	  <div class="span6">
	  	<h5>Cast</h5>
	  	<p>Who's taking center stage? Drag and drop to re-order the listings.</p>
	  	<input type="checkbox" name="order_cast" <%= "checked" if @film.cast.detect{|c| c.listing_order != nil} %>> Use custom ordering below for cast<br />
	  	<ul id="film_cast">
				<%= f.fields_for :film_positions, @film.cast do |builder| %>
					<%= render 'film_position_fields', :f => builder %>
				<% end %>
				<li><%= link_to_cast_fields "Add Cast", f, :film_positions %></li>
			</ul>
	  </div>
	  <% end %>
</div>
<hr />
<div class="row film-form people">
  <div class="span6">
  	<h5>Tech Opportunities</h5>
  	<p>These positions (if any) will be listed on our tech opportunities page.</p>
  	<ol id="tech_ops">
  	</ol>
  </div>
  <div class="span6">
  	<h5>Auditions</h5>
  	<p>Easily organize cast auditions with the YFA's built-in scheduling, or manage the process on your own.</p>
  	<%= form_for @film, :validate => true, :remote => true do |f| %>
	  	<%= f.check_box :auditions_enabled %>
			<%= f.label :auditions_enabled, "Enable YFA Audition System" %>
		<% end %>
		<div id="aud_enabled_wrapper">
			<% if @film.approved %>
				<%= form_for @film, :validate => true, :remote => true do |f| %>
					<%= f.text_area :aud_info, :class => "required", :placeholder => "Audition Info" %>
				<% end %>
				Create Audition Slots
				<%= form_tag (url_for :controller => 'auditions', :action => 'create'), :validate => false, :remote => true, :class => "datepair auditions" do |f| %>
					<%= text_field_tag :location, "", :placeholder => "Location", :validate => false %>
					<br />
					<div class="row">
						<div class="span3">
							Date: <%= text_field_tag :date, nil, :class => "date", :validate => false %>
						</div>
						<div class="span2">
							Start Time: <%= text_field_tag :start_time, nil, :class => "time start", :validate => false %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							Slot Length: <%= number_field_tag :duration %>
						</div>
						<div class="span2">
							End Time: <%= text_field_tag :end_time, nil, :class => "time end", :validate => false %>
						</div>
					</div>				
					<%= submit_tag "Create Slots" %>
				<% end %>

				<%= @film.title %>'s Audition Slots
				<div id="audition_slots">
					<%= render :partial => 'auditions/groups', :locals => { :audition_groups => Audition.group_into_blocks(@film.auditions) } %>
				</div>
			<% else %>
				Your film needs to be approved by an admin before you can add audition slots. Check back later!
			<% end %>
		</div>
  </div>
</div>
<hr />
<div class="clearfix" style="text-align: center;">
	<a class="btn" href="<%= dashboard_path %>">
		Cancel
	</a>
	<div class="btn btn-primary" id="submit">
		Save cast & crew
	</div>
</div>
	

