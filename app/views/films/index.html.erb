<% content_for :body_tag_content do %>
	 data-spy="scroll" data-target="#nav-films" data-offset="140"
<% end %>

<% content_for :head do %>
	<script>
	  var film_showtimes = <%= raw @showtime_data.to_json %>;
	  $(document).ready(function(){ 	
	   	// Initialize lazyload on films#index
    	$(".films.index .film-listing img.lazy").lazyload({
    	    threshold: 400, // picks up images up to 400px "below the fold"
    	    failure_limit: 6 // ensures up to 6 images can be queued to load at once
    	});
      });
	</script>
<% end %>

<nav id="nav-films" class="navbar scroll-fixed-top">
  <div class="navbar-inner">
    <ul class="nav nav-pills">
      <% nav_items_for_index.each_with_index do |item, i| %>
      	<% classes = item[:phone] ? [] : ["hidden-phone"]
      		classes += ["active"] if i == 0 %>
        <li class="<%= classes.join(' ') %>"><a href="<%= item[:link] %>"><%= item[:text] %></a></li>
      <% end %>
    </ul>
  </div>
</nav>

<% if ! @this_week.empty? %>
    <div class="divider" id="opening">
    	<h3>Opening Soon</h3>
    </div>
    <div class="this_week">
    	<% @this_week.in_groups_of(4, false) do |items| %>
    		<div class="row">
    			<% items.each do |item| %>
    				<div class="span3 item clearfix">
    					<% 
    							# Same hack as frontpage
    						 color_class = item.accent_color ? [item.accent_color] : [cycle("red", "blue","yellow","black","dark_blue","green", "light_blue")] 
    						 css_classes = color_class + ['hidden-phone']
    					%>
    						<%= render :partial => 'shared/film_frontpage', :locals => { :film => item, :row_count => 4, :css_classes => css_classes.join(' ') } %>
    					<% css_classes = color_class + ['visible-phone'] %>
    						<%= render :partial => 'shared/film_frontpage_mobile', :locals => { :film => item, :css_classes => css_classes.join(' ') } %>
    				</div>
    			<% end %>
    		</div>
    	<% end %>
    </div>
<% end %>

<% if ! @this_semester.empty? %>
    <div class="divider" id="this_semester">
    	<h3>This Semester</h3>
    </div>
    <% @this_semester.in_groups_of(3, false) do |items| %>
    	<div class="row">
    		<% items.each do |item| %>
    			<%= render :partial => 'shared/film_with_thumbnail', :locals => { :film => item, :row_count => items.length, :color_palette => item.accent_color ? item.accent_color.to_s : cycle("red", "blue","yellow","black","dark_blue","green", "light_blue"), :lazy => false } %>
    		<% end %>
    	</div>
    <% end %>
<% end %>

<% if ! @other.empty? %>
    <div class="divider" id="next_semester">
    	<h3>Beyond</h3>
    </div>
    <% @other.in_groups_of(3, false) do |items| %>
    	<div class="row">
    		<% items.each do |item| %>
    			<%= render :partial => 'shared/film_with_thumbnail', :locals => { :film => item, :row_count => items.length, :color_palette => item.accent_color ? item.accent_color.to_s : cycle("red", "blue","yellow","black","dark_blue","green", "light_blue"), :lazy => true } %>
    		<% end %>
    	</div>
    <% end %>
<% end %>

</div><!-- End of .container -->

<div id="archives" class="container hidden-phone">
<% (2008..Time.now.year).to_a.reverse.each do |year| %>
	<% ["03","01"].each do |term| %>
		<% if Time.now.year == year && Time.now.month < 7 && !Film.term_to_range("#{year}#{term}").cover?(Time.now) %>

		<% elsif year == Time.now.year && Film.term_to_range("#{year}#{term}").cover?(Time.now) %>
			<% cache({:action => "index", :action_suffix => "#{year}#{term}"}, {:expires_in => 12.hours}) do %>
				<%= render :partial => "films/archives", :locals => {:term => "#{year}#{term}"} %>
			<% end %>
		<% else %>
			<% cache(:action => "index", :action_suffix => "#{year}#{term}") do %>
				<%= render :partial => "films/archives", :locals => {:term => "#{year}#{term}"} %>
			<% end %>
		<% end %>
	<% end %>
<% end %>

