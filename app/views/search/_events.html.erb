<form method="GET" action="<%= search_path %>">
  <%= hidden_field_tag :t, params[:t] %>
  <%= hidden_field_tag :q, params[:q] %>
  <div class="row refinements">
    <div class="col-md-2">
      <label class="form-control-static">Refine events:</label>
    </div>
    <div class="col-md-3 checkbox">
      <label for="future">
        <%= check_box_tag :future, '1', params[:future] %>
        Only show future events
      </label>
    </div>
    <div class="col-md-1">
      <button type="submit" class="btn btn-default">Filter</button>
    </div>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <th>Event name</th>
    <th>Semester</th>
    <th>Date</th>
  </thead>
  <tbody>
    <% @event_dates.each do |event_date| -%>
    <tr>
      <td>
        <%= render "events/dialog", date: event_date %>
      </td>
      <td>
        <%= Yale::semester_label_for event_date.starts_at %>
      </td>
      <td>
        <%= short_date event_date.starts_at %>,
        <%= time event_date.starts_at %>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>
