<form class="form-inline" role="form" method="GET" action="<%= search_path %>">
  <%= hidden_field_tag :t, params[:t] %>
  <%= hidden_field_tag :q, params[:q] %>
  <div class="row refinements">
    <div class="col-md-2">
      <label class="form-control-static">Refine projects:</label>
    </div>
    <div class="form-group col-md-4">
      <div class="row">
        <div class="col-md-4 text-right">
          <label class="form-control-static" for="title">Project title</label>
        </div>
        <div class="col-md-8">
          <%= text_field_tag :title, params[:title], :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-4 checkbox">
      <label class="form-control-static" for="recent">
        <%= check_box_tag :recent, '1', params[:recent] %> &nbsp;
        Only show films made in the past year
      </label>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-default">Filter</button>
    </div>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <th>Title</th>
    <th>Year</th>
    <th>Directed By</th>
  </thead>
  <tbody>
    <% @projects.includes(:director).each do |film| -%>
    <tr>
      <td>
        <%= link_to film.title, film %>
      </td>
      <td>
        <%= film.end_date.year %>
      </td>
      <td>
        <%= link_to person_listing(film.director), film.director %>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>
